<Window x:Class="PL.Admin.SingleCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Call Window" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Id -->
        <Label Content="Id:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentCall.Id, Mode=TwoWay}" 
                 Grid.Row="0" Grid.Column="1" Margin="5" IsReadOnly="True"/>

        <!-- Call type -->
        <Label Content="Call Type:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <ComboBox SelectedValue="{Binding CurrentCall.CallType, Mode=TwoWay}" 
                  Grid.Row="1" Grid.Column="1" Margin="5" ItemsSource="{Binding Source={StaticResource CallTypeCollectionKey }}" />

        <!-- Address -->
        <Label Content="Address:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentCall.Address, Mode=TwoWay}" 
                 Grid.Row="2" Grid.Column="1" Margin="5" />

        <!-- Description -->
        <Label Content="Description:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentCall.VerbDesc, Mode=TwoWay}" 
                 Grid.Row="3" Grid.Column="1" Margin="5" />

        <!-- Open Time -->
        <Label Content="Open Time:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <DatePicker SelectedDate="{Binding CurrentCall.OpenTime, Mode=TwoWay}" 
                    Grid.Row="4" Grid.Column="1" Margin="5" IsEnabled="False" />

        <!-- Max Finish Time -->
        <Label Content="Max Finish Time:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <DatePicker SelectedDate="{Binding CurrentCall.MaxFinishTime, Mode=TwoWay}" 
                    Grid.Row="5" Grid.Column="1" Margin="5" IsEnabled="{Binding IsMaxTimeEditable}" />

        <!-- Status -->
        <Label Content="Status:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <ComboBox SelectedValue="{Binding CurrentCall.CallStatus, Mode=TwoWay}" 
                  Grid.Row="6" Grid.Column="1" Margin="5" IsEnabled="False" />

        <!-- List Assignments -->
        <Label Content="List Assignments:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Top" Margin="5" />
        <ListView ItemsSource="{Binding CallInList}" Grid.Row="7" Grid.Column="1" Margin="5"/>

        <!-- Update Button -->
        <Button Content="{Binding ButtonText}" 
                Command="{Binding UpdateCommand}" 
                Grid.Row="8" Grid.Column="0" Grid.ColumnSpan="2" 
                HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10"/>
    </Grid>
</Window>
