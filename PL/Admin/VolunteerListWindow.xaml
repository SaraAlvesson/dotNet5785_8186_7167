<Window x:Class="PL.Admin.VolunteerListWindow" 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="Volunteer Management" 
        Height="800" 
        Width="1000"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Closed="Window_Closed"
        Loaded="Window_Loaded"
        WindowStartupLocation="CenterScreen"
        Background="#ADD8E6">
    <!-- רקע תכלת בהיר -->

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Background" Value="#40E0D0"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
    </Window.Resources>

    <Grid Margin="25">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Filters and Sorting -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <!-- Filter by Call Type -->
            <StackPanel>
                <TextBlock Text="Filter by Call Type" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox Name="callTypeFilter" Width="231" Height="35" Margin="5"
                          ItemsSource="{Binding CallTypeOptions}"
                          SelectedItem="{Binding SelectedCallType}"
                          SelectionChanged="CallTypeFilter_SelectionChanged"
                          ToolTip="Filter by Call Type" />
            </StackPanel>

            <!-- Filter by Active/Inactive -->
            <StackPanel>
                <TextBlock Text="Filter by Active Status" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox Name="isActiveFilter" Width="231" Height="35" Margin="5"
                          ItemsSource="{Binding ActiveFilterOptions}"
                          SelectedItem="{Binding SelectedActiveFilter}"
                          SelectionChanged="IsActiveFilter_SelectionChanged"
                          ToolTip="Filter by Active Status" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Sort By" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                <ComboBox x:Name="sortField" Width="231" Height="37" Margin="5"
                          ItemsSource="{Binding SortOptions}"
                          SelectedItem="{Binding SelectedSortOption}"
                          SelectionChanged="SortField_SelectionChanged"
                          ToolTip="Sort By" />
            </StackPanel>

            <!-- Sort by Field -->
        </StackPanel>

        <!-- Volunteers ListView -->
        <ListView Grid.Row="1"
                  Margin="0,15,0,185"
                  BorderThickness="1"
                  BorderBrush="#FFCDD2"
                  ItemsSource="{Binding Volunteers}"
                  SelectedItem="{Binding SelectedVolunteer}"
                  MouseDoubleClick="lsvVolunteerList_MouseDoubleClick"
                  SelectionChanged="ListView_SelectionChanged">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="ID" DisplayMemberBinding="{Binding Id}" Width="100"/>
                    <GridViewColumn Header="Full Name" DisplayMemberBinding="{Binding FullName}" Width="120"/>
                    <GridViewColumn Header="Status" Width="70">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Active}" IsEnabled="False" VerticalAlignment="Center"/>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="All Calls" DisplayMemberBinding="{Binding SumTreatedCalls}" Width="60"/>
                    <GridViewColumn Header="Canceled" DisplayMemberBinding="{Binding SumCanceledCalls}" Width="60"/>
                    <GridViewColumn Header="Expired" DisplayMemberBinding="{Binding SumExpiredCalls}" Width="60"/>
                    <GridViewColumn Header="Current Call ID" DisplayMemberBinding="{Binding CallIdInTreatment}" Width="130"/>
                    <GridViewColumn Header="Current Call Type" DisplayMemberBinding="{Binding CallType}" Width="120"/>
                    <GridViewColumn Header="Actions" Width="100">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="Delete" 
        Click="DeleteButton_Click" 
        Tag="{Binding Id}" 
        Background="Red" 
        Foreground="White" 
        BorderBrush="Red" 
        BorderThickness="0" 
        Width="80" 
        Height="30">
                                    <Button.Style>
                                        <Style TargetType="Button">
                                            <Setter Property="Template">
                                                <Setter.Value>
                                                    <ControlTemplate TargetType="Button">
                                                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="0" 
                                CornerRadius="10"
                                Padding="5">
                                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                        </Border>
                                                    </ControlTemplate>
                                                </Setter.Value>
                                            </Setter>
                                        </Style>
                                    </Button.Style>
                                </Button>

                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>

        <!-- Add Button -->
        <Button Grid.Row="1"
                Content="Add New Volunteer"
                HorizontalAlignment="Center"
                Width="210"
                Click="ButtonAdd_Click"
                FontWeight="SemiBold"
                FontSize="14" Margin="0,521,0,75">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="20"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
