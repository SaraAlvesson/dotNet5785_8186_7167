<Window x:Class="PL.Volunteer.VolunteerInListWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL.Volunteer"
        mc:Ignorable="d"
        Title="Volunteer In List Window" Height="640" Width="800"
        Loaded="Window_Loaded"
        Closed="Window_Closed"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">


    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="21*"/>
            <ColumnDefinition Width="139*"/>
        </Grid.ColumnDefinitions>
        <!-- Id -->
        <Label Content="Id:" HorizontalAlignment="Left" Margin="52,56,0,0" VerticalAlignment="Top" Height="29" Width="129" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="148,70,0,539" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Id, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                  Width="125" IsReadOnly="{Binding ButtonText,Converter={StaticResource ConvertObjIdToTFkey}}" Grid.Column="1" />

        <!-- FullName -->
        <Label Content="FullName:" HorizontalAlignment="Left" Margin="52,108,0,0" VerticalAlignment="Top" Width="129" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="153,112,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- PhoneNumber -->
        <Label Content="PhoneNumber:" HorizontalAlignment="Left" Margin="52,139,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="158,152,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- Email -->
        <Label Content="Email:" HorizontalAlignment="Left" Margin="52,185,0,0" VerticalAlignment="Top" Width="129" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="157,189,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Email, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- Password -->
        <Label Content="Password:" HorizontalAlignment="Left" Margin="52,235,0,0" VerticalAlignment="Top" Width="112" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="158,235,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Password, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Height="26" Grid.Column="1"/>

        <!-- Location -->
        <Label Content="Location:" HorizontalAlignment="Left" Margin="52,268,0,0" VerticalAlignment="Top" Width="141" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="163,261,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Location, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Height="30" Grid.Column="1"/>

        <!-- Latitude -->
        <Label Content="Latitude:" HorizontalAlignment="Left" Margin="54,312,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="163,307,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Latitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- Longitude -->
        <Label Content="Longitude:" HorizontalAlignment="Left" Margin="54,348,0,0" VerticalAlignment="Top" Width="108" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="163,348,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.Longitude, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- Position -->
        <Label Content="Position:" HorizontalAlignment="Left" Margin="52,390,0,0" VerticalAlignment="Top" Width="90" Height="27" Grid.ColumnSpan="2"/>
        <ComboBox HorizontalAlignment="Left" Margin="158,390,0,0" VerticalAlignment="Top" Width="120" ItemsSource="{Binding Source={StaticResource PositionCollectionKey}}"
         SelectedValue="{Binding CurrentVolunteer.Position, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Column="1" />

        <!-- DistanceType -->
        <Label Content="DistanceType:" HorizontalAlignment="Left" Margin="52,486,0,0" VerticalAlignment="Top" Width="243" Grid.ColumnSpan="2"/>
        <ComboBox HorizontalAlignment="Left" Margin="175,496,0,0" VerticalAlignment="Top" Width="120" 
                  ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}" 
                  SelectedValue="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Column="1" />

        <!-- MaxDistance -->
        <Label Content="MaxDistance:" HorizontalAlignment="Left" Margin="52,448,0,0" VerticalAlignment="Top" Width="246" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="163,464,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="144" Height="18" Grid.Column="1"/>

        <!-- SumCalls -->
        <Label Content="SumCalls:" HorizontalAlignment="Left" Margin="62,517,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="187,530,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.SumCalls, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- SumExpired -->
        <Label Content="SumExpired:" HorizontalAlignment="Left" Margin="42,560,0,0" VerticalAlignment="Top" Width="122" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="45,569,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.SumExpired, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- SumCanceled -->
        <Label Content="SumCanceled:" HorizontalAlignment="Left" Margin="62,539,0,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <TextBox HorizontalAlignment="Left" Margin="223,560,0,0" TextWrapping="Wrap" 
                 Text="{Binding CurrentVolunteer.SumCanceled, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" 
                 VerticalAlignment="Top" Width="120" Grid.Column="1"/>

        <!-- Active -->
        <CheckBox HorizontalAlignment="Left" Margin="175,435,0,0" VerticalAlignment="Top" Width="120" 
                  Content="Active" IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay, NotifyOnValidationError=true, ValidatesOnExceptions=true}" Grid.Column="1" />


        <!-- Button (Add/Update) -->
        <Button Content="{Binding ButtonText}" HorizontalAlignment="Left" Margin="597,404,0,0" VerticalAlignment="Top" Height="27" Width="69" Click="btnAddUpdate" Grid.Column="1"/>
    </Grid>
</Window>