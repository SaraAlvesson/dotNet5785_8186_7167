<Window x:Class="PL.Admin.SingleVolunteerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Volunteer Window" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="3*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Id -->
        <Label Content="Id:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.Id, Mode=TwoWay}" 
                 Grid.Row="0" Grid.Column="1" Margin="5" 
                 IsEnabled="{Binding IsIdEnabled}" />

        <!-- Full Name -->
        <Label Content="Full Name:" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.FullName, Mode=TwoWay}" 
                 Grid.Row="1" Grid.Column="1" Margin="5" />

        <!-- Phone Number -->
        <Label Content="Phone Number:" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.PhoneNumber, Mode=TwoWay}" 
                 Grid.Row="2" Grid.Column="1" Margin="5" />

        <!-- Email -->
        <Label Content="Email:" Grid.Row="3" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.Email, Mode=TwoWay}" 
                 Grid.Row="3" Grid.Column="1" Margin="5" />

        <!-- Password -->
        <Label Content="Password:" Grid.Row="4" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.Password, Mode=TwoWay}" 
                 Grid.Row="4" Grid.Column="1" Margin="5" />

        <!-- Location -->
        <Label Content="Location:" Grid.Row="5" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.Location, Mode=TwoWay}" 
                 Grid.Row="5" Grid.Column="1" Margin="5" />

        <!-- Position -->
        <Label Content="Position:" Grid.Row="6" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <ComboBox ItemsSource="{Binding Source={StaticResource PositionCollectionKey}}"
                  SelectedItem="{Binding CurrentVolunteer.Position, Mode=TwoWay}"
                  Grid.Row="6" Grid.Column="1" Margin="5" />

        <!-- Distance Type -->
        <Label Content="Distance Type:" Grid.Row="7" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <ComboBox ItemsSource="{Binding Source={StaticResource DistanceTypeCollectionKey}}"
                  SelectedItem="{Binding CurrentVolunteer.DistanceType, Mode=TwoWay}"
                  Grid.Row="7" Grid.Column="1" Margin="5" />

        <!-- MaxDistance -->
        <Label Content="Max Distance:" Grid.Row="8" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.MaxDistance, Mode=TwoWay}" Grid.Row="8" Grid.Column="1" Margin="5" />

        <!-- Sum Calls -->
        <Label Content="Sum Calls:" Grid.Row="9" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.SumCalls, Mode=TwoWay}" 
                 Grid.Row="9" Grid.Column="1" Margin="5" IsReadOnly="True" />

        <!-- Sum Expired -->
        <Label Content="Sum Expired:" Grid.Row="10" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.SumExpired, Mode=TwoWay}" 
                 Grid.Row="10" Grid.Column="1" Margin="5" IsReadOnly="True" />

        <!-- Sum Canceled -->
        <Label Content="Sum Canceled:" Grid.Row="11" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <TextBox Text="{Binding CurrentVolunteer.SumCanceled, Mode=TwoWay}" 
                 Grid.Row="11" Grid.Column="1" Margin="5" IsReadOnly="True" />

        <!-- Is Active -->
        <Label Content="Is Active:" Grid.Row="12" Grid.Column="0" VerticalAlignment="Center" Margin="5" />
        <CheckBox IsChecked="{Binding CurrentVolunteer.Active, Mode=TwoWay}" Grid.Row="12" Grid.Column="1" Margin="5" />

        <Label Content="Volunteer Taken Care:" Grid.Row="13" Grid.Column="0" VerticalAlignment="Center" Margin="5"/>

        <ListView ItemsSource="{Binding CurrentVolunteer.VolunteerTakenCare}" 
          Grid.Row="13" Grid.Column="1" Margin="5"
          SelectionChanged="ListView_SelectionChanged"
          VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Height="Auto">
            <ListView.View>
                <GridView>
                    <!-- הצגת השדה Id -->
                    <GridViewColumn Header="Id" DisplayMemberBinding="{Binding Id}" Width="100"/>

                    <!-- הצגת השדה CallId -->
                    <GridViewColumn Header="CallId" DisplayMemberBinding="{Binding CallId}" Width="100"/>

                    <!-- הצגת השדה CallType -->
                    <GridViewColumn Header="Call Type" DisplayMemberBinding="{Binding CallType}" Width="150"/>

                    <!-- הצגת השדה VerbDesc -->
                    <GridViewColumn Header="Description" DisplayMemberBinding="{Binding VerbDesc}" Width="200"/>

                    <!-- הצגת השדה CallAddress -->
                    <GridViewColumn Header="Call Address" DisplayMemberBinding="{Binding CallAddress}" Width="200"/>

                    <!-- הצגת השדה OpenTime -->
                    <GridViewColumn Header="Open Time" DisplayMemberBinding="{Binding OpenTime}" Width="150"/>

                    <!-- הצגת השדה MaxFinishTime -->
                    <GridViewColumn Header="Max Finish Time" DisplayMemberBinding="{Binding MaxFinishTime}" Width="150"/>

                    <!-- הצגת השדה StartAppointmentTime -->
                    <GridViewColumn Header="Start Appointment" DisplayMemberBinding="{Binding StartAppointmentTime}" Width="150"/>

                    <!-- הצגת השדה DistanceOfCall -->
                    <GridViewColumn Header="Distance" DisplayMemberBinding="{Binding DistanceOfCall}" Width="100"/>

                    <!-- הצגת השדה Status -->
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Status}" Width="100"/>
                </GridView>
            </ListView.View>
        </ListView>


        <!-- Add/Update Button -->
        <Button Content="{Binding ButtonText}" 
                Grid.Row="14" Grid.Column="1" 
                HorizontalAlignment="Center" Margin="10" 
                FontSize="16" Width="200" 
                Background="Green" Foreground="White" 
                Click="btnAddUpdate_Click" />
    </Grid>
</Window>
