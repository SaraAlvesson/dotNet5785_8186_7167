<Window x:Class="PL.Volunteer.ChooseCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Call for Handling" Height="600" Width="900" DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Screen Header -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Top" Grid.Row="0">
            <TextBlock Text="Select a Call for Handling" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" HorizontalAlignment="Center"/>
            <!-- Filters and Sorting -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Label Content="Filter by Type:" FontSize="14" VerticalAlignment="Center"/>
                <ComboBox Width="150" Margin="10,0" SelectedItem="{Binding SelectedTypeFilter}"/>
                <Label Content="Filter by Address:" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <TextBox Width="150" Margin="10,0" Text="{Binding AddressFilter, UpdateSourceTrigger=PropertyChanged}" TextChanged="FilterAddressTextBox_TextChanged"/>
                <Label Content="Sort by:" FontSize="14" VerticalAlignment="Center" Margin="20,0,0,0"/>
                <ComboBox Width="150" SelectedItem="{Binding SelectedSortOption}"/>
            </StackPanel>
        </StackPanel>

        <!-- Call List Table -->
        <DataGrid Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True" Margin="0,10,0,10" 
                  AlternatingRowBackground="#F9F9F9" VerticalScrollBarVisibility="Auto" ItemsSource="{Binding Calls}" SelectionChanged="CallsDataGrid_SelectionChanged_1">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallType}" Width="150"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Open Time" Binding="{Binding OpenTime}" Width="150"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceOfCall}" Width="100"/>
                <DataGridTextColumn Header="Max Finish Time" Binding="{Binding MaxFinishTime}" Width="150"/>
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Select" Command="{Binding DataContext.ChooseCallCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Width="80" Height="30" Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="#4CAF50" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Map and Call Details -->
        <Grid Grid.Row="2" Margin="0,20,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Map Section -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
                <WebBrowser HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Border>

            <!-- Call Details Section -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Call Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBox TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Height="150" Margin="0,0,0,10" 
                         Text="{Binding SelectedCallDetails}" TextChanged="CallDetailsTextBox_TextChanged"/>
            </StackPanel>
        </Grid>

        <!-- Update Address Section -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Label Content="Update Address:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <TextBox Width="250" Margin="0,0,10,0" FontSize="14" Text="{Binding NewAddress, UpdateSourceTrigger=PropertyChanged}"/>
            <Button Content="Update" Command="{Binding UpdateAddressCommand}" Width="100" Height="30" Background="#2196F3" Foreground="White" 
                    FontWeight="Bold" BorderBrush="#2196F3" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
