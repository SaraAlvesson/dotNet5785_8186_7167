<Window x:Class="PL.Admin.SingleCallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Single Call Window" Height="640" Width="800"
        DataContext="{Binding RelativeSource={RelativeSource Mode=Self}}">

    <Grid Margin="20">
        <!-- Screen Header -->
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <TextBlock Text="Select a Call for Handling" FontSize="24" FontWeight="Bold" Foreground="#333" Margin="0,0,0,20" HorizontalAlignment="Center"/>
        </StackPanel>

        <!-- Grid Row Definitions -->
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Call List Table -->
        <DataGrid Grid.Row="0" Name="CallsDataGrid" AutoGenerateColumns="False" IsReadOnly="True" CanUserSortColumns="True" Margin="0,49,0,10" AlternatingRowBackground="#F9F9F9" VerticalScrollBarVisibility="Auto">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="100"/>
                <DataGridTextColumn Header="Call Type" Binding="{Binding CallType}" Width="150"/>
                <DataGridTextColumn Header="Address" Binding="{Binding Address}" Width="200"/>
                <DataGridTextColumn Header="Distance (km)" Binding="{Binding DistanceOfCall}" Width="100"/>
                <DataGridTemplateColumn Header="Action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Select" Command="{Binding DataContext.ChooseCallCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                    CommandParameter="{Binding}" Width="80" Height="30" Background="#4CAF50" Foreground="White" FontWeight="Bold" 
                                    BorderBrush="#4CAF50" Cursor="Hand"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <!-- Map and Call Details -->
        <Grid Grid.Row="1" Margin="0,20,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <!-- Map Section -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="1" Margin="10">
                <WebBrowser Name="MapBrowser" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
            </Border>

            <!-- Call Details Section -->
            <StackPanel Grid.Column="1" Margin="10">
                <TextBlock Text="Call Details" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                <TextBox Name="CallDetailsTextBox" TextWrapping="Wrap" IsReadOnly="True" VerticalScrollBarVisibility="Auto" Height="107" Margin="0,0,0,10" Width="254"/>
            </StackPanel>
        </Grid>

        <!-- Update Address Section -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Label Content="Update Address:" VerticalAlignment="Center" FontSize="14" Margin="0,0,10,0"/>
            <TextBox Name="NewAddressTextBox" Width="250" Margin="0,0,10,0" FontSize="14"/>
            <Button Content="Update" Command="{Binding UpdateAddressCommand}" Width="100" Height="30" Background="#2196F3" Foreground="White" 
                    FontWeight="Bold" BorderBrush="#2196F3" Cursor="Hand"/>
        </StackPanel>
    </Grid>
</Window>
