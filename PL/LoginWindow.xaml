<Window x:Class="PL.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="800">

    <Grid Background="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="2*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Label Content="Login" FontSize="30" FontWeight="Bold" Foreground="#2C3E50" 
               HorizontalAlignment="Center" Grid.Row="0" Grid.ColumnSpan="3" Margin="0,74,0,72" />

        <Label Content="Username:" FontSize="16" Foreground="#2C3E50" 
               Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" />
        <TextBox Width="250" Height="35" Grid.Row="1" Grid.Column="1" VerticalAlignment="Center" 
                 HorizontalAlignment="Right" Margin="0,0,20,0" Background="#ECF0F1" 
                 BorderBrush="#BDC3C7" Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" />

        <Label Content="Password:" FontSize="16" Foreground="#2C3E50" 
               Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="20,0,0,0" />
        <PasswordBox Width="250" Height="35" Grid.Row="2" Grid.Column="1" VerticalAlignment="Center" 
                     HorizontalAlignment="Right" Margin="0,0,20,0" Background="#ECF0F1" 
                     BorderBrush="#BDC3C7" PasswordChanged="PasswordBox_PasswordChanged" />

        <StackPanel Orientation="Horizontal" Grid.Row="3" Grid.Column="1" 
                    HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,20,0,0">
            <Button Content="Login" Width="100" Height="40" Margin="10,0" 
                    Background="#4CAF50" Foreground="White" BorderBrush="#2980B9" Click="LoginButton_Click" />
            <Button Content="Cancel" Width="100" Height="40" Margin="10,0" 
                    Background="#4CAF50" Foreground="White" Click="CancelButton_Click" />
        </StackPanel>
    </Grid>
</Window>
